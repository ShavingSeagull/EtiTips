<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AmitaTextAppearance">
        <item name="android:fontFamily">@font/amita</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ContinentTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/mainScreenBg</item>
        <item name="tabSelectedTextColor">@color/mainScreenBg</item>
        <item name="tabTextAppearance">@style/ContinentTabTextAppearance</item>
    </style>

    <style name="ContinentTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

</resources>

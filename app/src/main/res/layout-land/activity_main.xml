<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainScreenBg"
        tools:context=".MainActivity">
    <Button
            android:text="@string/main_button_text"
            android:layout_width="192dp"
            android:layout_height="77dp"
            android:id="@+id/button"
            android:background="@drawable/button_background" android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textAllCaps="false" android:fontFamily="@font/amita" android:elevation="3dp"
            android:stateListAnimator="@null"
            android:backgroundTintMode="add" android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.255"/>
    <ImageView
            android:layout_width="238dp"
            android:layout_height="227dp" app:srcCompat="@drawable/etitips_logo"
            android:id="@+id/logo"
            android:contentDescription="@string/logo_desc"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.047"/>
</androidx.constraintlayout.widget.ConstraintLayout>